{
  "name": "oas-mcp",
  "version": "0.1.1",
  "description": "Turn any OpenAPI 3.x spec into a suite of MCP tools accessible via Server-Sent Events + JSON-RPC.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": "./dist/cli.js",
    "./shared": {
      "import": "./dist/shared/types.js",
      "types": "./dist/shared/types.d.ts"
    }
  },
  "bin": {
    "oas-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p . --noEmit",
    "dev": "tsx src/cli.ts serve",
    "start": "node dist/cli.js serve",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "npm run build",
  "prepublishOnly": "npm run lint && npm test && npm run build",
  "test": "vitest run",
  "docs:typedoc": "typedoc",
  "docs:prepare": "rimraf docs/api && npm run docs:typedoc",
  "docs:start": "npm run docs:prepare && docusaurus start",
  "docs:build": "npm run docs:prepare && docusaurus build",
  "docs:deploy": "npm run docs:build && gh-pages -d build"
  ,"docs:check": "node scripts/check-doc-links.mjs"
  },
  "keywords": [
    "openapi",
    "mcp",
    "sse",
    "json-rpc",
    "api-tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elwizard33/oas-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/elwizard33/oas-mcp/issues"
  },
  "homepage": "https://github.com/elwizard33/oas-mcp#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.3",
    "commander": "^12.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "@docusaurus/core": "^3.4.0",
    "@docusaurus/preset-classic": "^3.4.0",
  "typedoc": "0.28.0",
  "typedoc-plugin-markdown": "^4.8.1",
    "gh-pages": "^6.0.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "prettier": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false
}
