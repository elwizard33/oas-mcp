---
const { title = 'oas-mcp', sidebar = [], currentPath = '' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title} â€“ oas-mcp</title>
    <link rel="icon" href="/oas-mcp/img/favicon.ico" />
    <style>
      body { margin:0; font-family: system-ui, sans-serif; display:flex; min-height:100vh; }
      nav { width:260px; background:#111827; color:#f9fafb; padding:1rem; overflow:auto; }
      nav a { color:#cbd5e1; text-decoration:none; display:block; padding:.25rem 0; }
      nav a.active { color:#fff; font-weight:600; }
      main { flex:1; padding:2rem; max-width:960px; }
      pre { background:#1e293b; padding:1rem; overflow:auto; color:#f1f5f9; }
      code { font-family: ui-monospace, SFMono-Regular, Menlo, monospace; }
      h1,h2,h3 { scroll-margin-top: 80px; }
      .toc { border-left:4px solid #e2e8f0; padding-left:.75rem; margin:1rem 0 2rem; }
      @media (max-width:900px){ body{flex-direction:column;} nav{width:auto; display:flex; flex-wrap:wrap;} nav a{margin-right:1rem;} }
    </style>
  </head>
  <body>
    <nav>
      <h2 style="margin-top:0">oas-mcp</h2>
      {sidebar.map(section => (
        <div>
          <strong style="display:block;margin-top:.75rem;">{section.label}</strong>
          {section.group?.map(item => (
            <a href={item.href} class={item.href===currentPath ? 'active': ''} style="margin-left:.5rem;">{item.label}</a>
          ))}
        </div>
      ))}
      <hr />
      <a href="https://github.com/elwizard33/oas-mcp" target="_blank">GitHub</a>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>
